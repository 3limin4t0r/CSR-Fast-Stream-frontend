{% extends "::base.html.twig" %}

{% block title %}

    {% trans %}programme.selection.title{% endtrans %}

{% endblock %}

{% block breadcrumb %}

    <div id="global-breadcrumb" class="header-context">

        <nav role="navigation">
            <ol class="group">
                <li><a href="{{ path('transform_core_app_programme_selection') }}">{% trans %}programme.selection.breadcrumb{% endtrans %}</a></li>
            </ol>
        </nav>

    </div>

{% endblock %}

{% block heading %}

    <h1 class="form-title heading-large">{% trans %}programme.selection.title{% endtrans %}</h1>

{% endblock %}

{% block body %}

    <div class="text">
        {% for i in range(0,'programme.selection.introduction'|translationLength) -%}
            <p>{{('programme.selection.introduction.'~i)|trans}}</p>
        {%- endfor %}
    </div>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

    <script>
        (function ()
        {
            $('input[type=radio]').each(
                function() {
                    $(this).attr('disabled', 'disabled');
                }
            );
            $('input[value=Generalist]').removeAttr('disabled');
        })();
    </script>
{% endblock %}
