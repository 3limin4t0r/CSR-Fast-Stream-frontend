{% extends "::base.html.twig" %}

{% block title %}

    {% trans %}programme.selected.title{% endtrans %}

{% endblock %}

{% block breadcrumb %}

    <div id="global-breadcrumb" class="header-context">

        <nav role="navigation">
            <ol class="group">
                <li><a href="{{ path('transform_core_app_programme_selection') }}">{% trans %}programme.selection.breadcrumb{% endtrans %}</a></li>
                <li>{% trans %}programme.selected.breadcrumb{% endtrans %}</li>
            </ol>
        </nav>

    </div>

{% endblock %}

{% block heading %}

    <h1 class="form-title heading-large">{% trans %}programme.selected.title{% endtrans %}</h1>

{% endblock %}

{% block body %}

    <div class="text">
        {% for i in range(0,'programme.selected.introduction'|translationLength) -%}
            <p>{{('programme.selected.introduction.'~i)|trans}}</p>
        {%- endfor %}
    </div>

    <h3 class="heading-medium">{% trans %}programme.selected.detail{% endtrans %}</h3>

    <div class="text">
        {% for i in range(0,'programme.selected.progress'|translationLength) -%}
            <p>{{('programme.selected.progress.'~i)|trans}}</p>
        {%- endfor %}
    </div>

    <a class="button" href="{{ path('transform_core_app_programme_selection') }}">Edit</a>
    <a class="button" href="{{ path('transform_core_app_scheme_selection') }}">Scheme Selection</a>

{% endblock %}
