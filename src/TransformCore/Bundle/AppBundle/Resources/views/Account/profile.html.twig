{% extends "::base.html.twig" %}

{% block title %}

    {% trans %}profile.title{% endtrans %}

{% endblock %}

{% block heading %}

    <p class="step">{% trans %}profile.step{% endtrans %}</p>

    <h1 class="form-title heading-large">{% trans %}profile.title{% endtrans %}</h1>

{% endblock %}

{% block breadcrumb %}

    <div id="global-breadcrumb" class="header-context">

        <nav role="navigation">
            <ol class="group">
                <li><a href="{{ path('transform_core_app_account') }}">{% trans %}account.title{% endtrans %}</a></li>
                <li class="active">{% trans %}profile.title{% endtrans %}</li>
                <li><a href="{{ path('transform_core_app_eligibility') }}">{% trans %}eligibility.title{% endtrans %}</a></li>
                <li><a href="{{ path('transform_core_app_diversity') }}">{% trans %}diversity.title{% endtrans %}</a></li>
                <li><a href="{{ path('transform_core_app_review') }}">{% trans %}review.title{% endtrans %}</a></li>
            </ol>
        </nav>
    
    </div>

{% endblock %}

{% block body %}

    <div class="text">
        <p class="introduction">{% trans %}profile.introduction{% endtrans %}</p>
    </div>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_widget(form) }}
    {{ form_end(form) }}

{% endblock %}
