{% extends "::base.html.twig" %}

{% block title %}

    {% trans %}program.selection.title{% endtrans %}

{% endblock %}

{% block breadcrumb %}

    <div id="global-breadcrumb" class="header-context">

        <nav role="navigation">
            <ol class="group">
                <li><a href="{{ path('transform_core_app_program_selection') }}">{% trans %}program.selection.breadcrumb{% endtrans %}</a></li>
            </ol>
        </nav>

    </div>

{% endblock %}

{% block heading %}

    <h1 class="form-title heading-large">{% trans %}program.selection.title{% endtrans %}</h1>

{% endblock %}

{% block body %}

    <div class="text">
        {% for i in range(0,'program.selection.introduction'|translationLength) -%}
            <p>{{('program.selection.introduction.'~i)|trans}}</p>
        {%- endfor %}
    </div>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
{% endblock %}
