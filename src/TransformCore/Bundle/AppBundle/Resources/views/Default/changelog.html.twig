{% extends "::base.html.twig" %}

{% block title %}Changelog{% endblock %}

{% block heading %}

    <h1 class="form-title heading-large">Changelog</h1>

{% endblock %}

{% block body %}

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Change</th>
            </tr>
        </thead>
        <tbody>
            {% for commit in changelog %}
                <tr>
                    <td>{{ commit }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
