{% extends "::base.html.twig" %}

{% block title %}

    {% trans %}science-and-engineering.selection.title{% endtrans %}

{% endblock %}

{% block breadcrumb %}

    <div id="global-breadcrumb" class="header-context">

        <nav role="navigation">
            <ol class="group">
                <li>
                    <a href="{{ path('transform_core_app_scheme_selection') }}">
                        {% trans %}science-and-engineering.selection.breadcrumb{% endtrans %}
                    </a>
                </li>
            </ol>
        </nav>

    </div>

{% endblock %}

{% block heading %}

    <h1 class="form-title heading-large">{% trans %}science-and-engineering.selection.title{% endtrans %}</h1>

{% endblock %}

{% block body %}

    <div class="text">
        {% for i in range(0,'science-and-engineering.selection.introduction'|translationLength) -%}
            <p>{{('science-and-engineering.selection.introduction.'~i)|trans}}</p>
        {%- endfor %}
    </div>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_end(form) }}

{% endblock %}
