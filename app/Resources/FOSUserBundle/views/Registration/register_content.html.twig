            {{ form_row(form.registered_disability_group.registration.disabledAdjustmentRequired) }}

            <div id="disabled-adjustment-required-container">

                {{ form_row(form.registered_disability_group.registration.disabledDetails) }}

                <legend class="form-label-bold">{% trans %}register.form.disabled-adjustment-title{% endtrans %}</legend>

                <div class="text">
                    <p>{% trans %}register.form.disabled-adjustment-subtitle{% endtrans %}</p>
