<script>

    (function ()
    {
        var disabledAdjustmentRequiredTrigger = 
            $("#fos_user_registration_form_registered_disability_group_registration_disabledAdjustmentRequired");

        var disabledAdjustmentRequiredChangeObserver = function()
        {
            if (disabledAdjustmentRequiredTrigger.prop('checked')) {
                $("#disabled-adjustment-required-container").show();
            } else {
                $("#disabled-adjustment-required-container").hide();
            }
        }

        disabledAdjustmentRequiredChangeObserver();
        disabledAdjustmentRequiredTrigger.click(disabledAdjustmentRequiredChangeObserver);
    })();

</script>
